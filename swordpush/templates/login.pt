<metal:use use-macro="main.macros['main']">
<metal:body metal:fill-slot="body">
    <p class="body">
      Please provide the credentials that you will be using for this session.
    </p>
    <div class="body">
      <form action="auth" method="post">
	<table>
	  <tr>
	    <td>Service document URL: </td>
            <td><input type="text" name="serviceDocument" width="20" value="http://cnx.org/sword"/></td>
	  </tr>
	  <tr>
            <td>Username: </td>
            <td><input type="text" name="username" width="20"/></td>
	  </tr>
	  <tr>
            <td>Password: </td>
            <td><input type="password" name="password" width="20"/></td>
	  </tr>
	  <tr>
            <td colspan="2"><input type="submit" value="Login"/></td>
	  </tr>
	</table>
      </form>
    </div>
</metal:body>
</metal:use>
